# --- Database (PostgreSQL) ---
DATABASE_URL=postgresql+asyncpg://jobs:jobs_dev_password@localhost:5432/job_aggregator

# --- Cache (Redis) ---
REDIS_URL=redis://localhost:6379/0

# --- API Server ---
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
LOG_LEVEL=info

# --- External APIs (Phase 2+) ---
# BLOOMBERRY_API_KEY=
